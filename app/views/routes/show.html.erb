<div class="small-12 column">
<p>
  <strong>Von:</strong>
  <%= @route.from.complete_address.to_s + " | " + @route.from.show_address.to_s %><br>
  Adresse deaktiviert?&nbsp <%= check_box_tag 'from_active', 'from_active' , @route.from.inactive?, disabled: true %>
</p>

<p>
  <strong>Nach:</strong>
  <%= @route.to.complete_address.to_s + " | " + @route.to.show_address.to_s  %><br>
  Adresse deaktiviert?&nbsp <%= check_box_tag 'to_active', 'to_active' , @route.to.inactive? , disabled: true %>
</p>

<p>
  <strong>Kalkulationsbasis:</strong>
  <%= @route.get_calculation_basis %>
</p>

<p>
  <strong>Distanz:</strong>
  <%= @route.distance %>
</p>

<p>
  <strong>Status:</strong>
  <%= @route.get_status %>
</p>

<%= link_to 'Editieren', edit_route_path(@route) %> |
<%= link_to t(:back), routes_path %>
</div>