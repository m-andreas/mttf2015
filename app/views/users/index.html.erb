<div class="small-12 columns">
  <h1>Alle Benutzer</h1>

  <table id="users-table">
    <thead>
      <tr>
        <th>Benutzername</th>
        <th>Vorname</th>
        <th>Familienname</th>
        <th>EMail Adresse</th>
        <th>Firma</th>
        <th class="no-sort" colspan="1"></th>
        <th class="no-sort" colspan="1"></th>
        <th class="no-sort" colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.company.name unless user.company.nil? %></td>
          <td><%= link_to 'Anzeigen', user %></td>
          <td><%= link_to 'Editieren', edit_user_path(user) %></td>
          <td><%= link_to , user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Neuer Benutzer', '/users/invitation/new' %>
</div>