<h1>Listing shuttle_cars</h1>

<table>
  <thead>
    <tr>
      <th>Car brand</th>
      <th>Car type</th>
      <th>Registration number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shuttle_cars.each do |shuttle_car| %>
      <tr>
        <td><%= shuttle_car.car_brand %></td>
        <td><%= shuttle_car.car_type %></td>
        <td><%= shuttle_car.registration_number %></td>
        <td><%= link_to 'Show', shuttle_car %></td>
        <td><%= link_to 'Edit', edit_shuttle_car_path(shuttle_car) %></td>
        <td><%= link_to 'Destroy', shuttle_car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

