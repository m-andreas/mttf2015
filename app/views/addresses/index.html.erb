<div class="small-12 columns">
<h1>Alle Adressen</h1>

<table id="addresses-table" >
  <thead>
    <tr>
      <th>Erstellt von</th>
      <th>Land</th>
      <th>Stadt</th>
      <th>PLZ</th>
      <th>Adressse</th>
      <th>Adresse kurz</th>
      <th>Deaktiviert</th>
      <th class="no-sort" colspan="1"></th>
      <th class="no-sort" colspan="1"></th>
      <th class="no-sort" colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.created_by %></td>
        <td><%= address.country %></td>
        <td><%= address.city %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.address %></td>
        <td><%= address.address_short %></td>
        <td><%= address.inactive? ? "Ja" : "Nein" %></td>
        <td><%= link_to 'Anzeigen', address %></td>
        <td><%= link_to 'Editieren', edit_address_path(address) %></td>
        <td><%= link_to I18n.translate(:delete), address, method: :delete, data: { confirm: 'Sind sie sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Neue Adresse anlegen', new_address_path %>
</div>