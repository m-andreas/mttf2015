<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Erstellt von</th>
      <th>Land</th>
      <th>Stadt</th>
      <th>PLZ</th>
      <th>Adressse</th>
      <th>Adresse kurz</th>
      <th>Deaktiviert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.created_by %></td>
        <td><%= address.country %></td>
        <td><%= address.city %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.address %></td>
        <td><%= address.address_short %></td>
        <td><%= address.inactive %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @addresses %>
<br>

<%= link_to 'Neue Adresse anlgen', new_address_path %>
