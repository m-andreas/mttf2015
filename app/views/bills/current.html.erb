<div class= "small-12 column">
  <h1>Aktuelle Rechnung</h1>
</div>
<%= render "jobs_in_bill" %>
<div class= "small-12 column">
  <div class= "small-12 medium-3 column">
    <%= button_to "Aktuelle Rechnung entfernen", delete_current_bill_path, data: { confirm: "Alle Aufträge in der Rechnung werden wieder auf 'Offen' gesetz. Fortfahren?" } %>
  </div>
  <div class= "small-12 medium-3 column">
    <%= button_to "Alle Offenen Aufträge in Rechnung übernehmen", add_jobs_to_bill_path %>
  </div>
  <div class= "small-12 medium-3 column">
    <%= button_to "Rechnung abschließen", pay_bill_path(@bill) %>
  </div>
  <div class= "small-12 medium-3 column">
  </div>
</div>