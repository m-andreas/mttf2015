<div class="small-12 columns">
  <h1>Alle Firmen</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Adresse</th>
        <th>Stadt</th>
        <th>PLZ</th>
        <th>Land</th>
        <th>Telefon</th>
        <th>Email</th>
        <th>Preis pro km</th>
        <th>Preis Pauschale</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= company.address %></td>
          <td><%= company.city %></td>
          <td><%= company.zip_code %></td>
          <td><%= company.country %></td>
          <td><%= company.telephone %></td>
          <td><%= company.email %></td>
          <td><%= company.price_per_km %></td>
          <td><%= company.price_flat_rate %></td>
          <td><%= link_to 'Anzeigen', company %></td>
          <td><%= link_to 'Editieren', edit_company_path(company) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>