<h1>Auslandzeiten f√ºr <%= @date_string %> von <%= @driver.fullname_id %></h1>
<table>
  <thead>
    <tr>
      <td>Nummer</td>
      <td>Datum</td>
      <td>Strecke</td>
      <td>Gesamtzeit</td>
      <td>Bezahlung</td>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>
    <% if job.get_abroad_time > 0 %>
      <tr>
        <td>
          <%= link_to( job.id, job_path(job)) %>
        <td>
          <%=l job.actual_collection_time.to_date %>
        </td>
        <td>
          <%= job.get_route_string %>
        </td>
          <% if job.get_abroad_time(@driver) < AbroadTime::MIN_TIME %>
            <td>
              <span class="line-trough"><%= job.get_abroad_time(@driver) %></span>
            </td>
            <td>
              0
            </td>
          <% else %>
            <td>
              <% aboad_time = job.get_abroad_time(@driver) %>
              <%= aboad_time %>
            </td>
            <td>
              <%= aboad_time * AbroadTime::PRICE %>
            </td>
          <% end %>
      </tr>
    <% end %>
  <% end %>
  <tr>
  <td>
  </td>
  <td>
  </td>
  <td>
  GESAMT:
  </td>
  <td>
    <%= @total_time %>
  </td>
  <td>
    <%= @total_time * AbroadTime::PRICE %>
  </td>
</tr>
  </tbody>
</table>

