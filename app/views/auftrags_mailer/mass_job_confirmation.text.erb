<%= t("auftragsmail.mass.intro") %>

Auftraggeber: <%= @user.company.name %> - <%= @user.first_name %> <%= @user.last_name %>

<% @jobs.each do |job| %>
Auftragsnummer: <%= job.id %>

Fahrzeugdaten: <%= job.car_brand %> / <%= job.car_type %> / <%= job.registration_number %>
<%= t("auftragsmail.date") %>: <%= job.scheduled_collection_time.strftime("%d.%m.%Y") %>
<%= t("auftragsmail.from") %>: <%= job.from.show_address unless job.from.nil? %>
<%= t("auftragsmail.to") %>: <%= job.to.show_address unless job.to.nil? %>
Bemerkungen: <%= job.job_notice %>
<%= t("opening_times") %>:
<%= job.from.opening_hours unless job.from.nil? %>
<% unless @jobs.last == job %>

================================================================

<% end %>
<% end %>