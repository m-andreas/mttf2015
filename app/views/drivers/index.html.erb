<h1>Liste aller Fahrer</h1>

<table id="drivers" class="display no-wrap">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Vorname</th>
      <th>Familienname</th>
      <th colspan="1">Austrittsdatum</th>
      <th>Adresse</th>
      <th>Wien</th>
      <th>PLZ</th>
      <th>Telefon</th>
      <th colspan="1">Führerscheinkopie</th>
      <th colspan="1">Meldezettel</th>
      <th colspan="1">Werkvertrag</th>
      <th colspan="1"></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= link_to 'Details', driver %></td>
        <td><%= driver.first_name %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.exit_date %></td>
        <td><%= driver.address %></td>
        <td><%= driver.city %></td>
        <td><%= driver.zip_code %></td>
        <td><%= driver.telepone %></td>
        <td><%= check_box_tag 'service_contract', 'submitted', driver.driving_licence_copy, disabled: true %></td>
        <td><%= check_box_tag 'service_contract', 'submitted', driver.registration_copy, disabled: true %></td>
        <td><%= check_box_tag 'service_contract', 'submitted', driver.service_contract, disabled: true %></td>
        <td><%= link_to 'Editieren', edit_driver_path(driver) %></td>
        <td><%= link_to 'Löschen', driver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>