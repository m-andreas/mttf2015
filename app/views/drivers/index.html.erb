<h1>Listing drivers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Entry date</th>
      <th>Exit date</th>
      <th>Date of birth</th>
      <th>Place of birth</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip code</th>
      <th>Telepone</th>
      <th>Telephone2</th>
      <th>Licence number</th>
      <th>Issuing authority</th>
      <th>Driving licence category</th>
      <th>Comment</th>
      <th>Social security number</th>
      <th>Driving licence copy</th>
      <th>Registration copy</th>
      <th>Service contract</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.first_name %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.entry_date %></td>
        <td><%= driver.exit_date %></td>
        <td><%= driver.date_of_birth %></td>
        <td><%= driver.place_of_birth %></td>
        <td><%= driver.address %></td>
        <td><%= driver.city %></td>
        <td><%= driver.zip_code %></td>
        <td><%= driver.telepone %></td>
        <td><%= driver.telephone2 %></td>
        <td><%= driver.licence_number %></td>
        <td><%= driver.issuing_authority %></td>
        <td><%= driver.driving_licence_category %></td>
        <td><%= driver.comment %></td>
        <td><%= driver.social_security_number %></td>
        <td><%= driver.driving_licence_copy %></td>
        <td><%= driver.registration_copy %></td>
        <td><%= driver.service_contract %></td>
        <td><%= link_to 'Show', driver %></td>
        <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
        <td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

